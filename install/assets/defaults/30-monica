#!/command/with-contenv bash

if [ "${STAGE}" = "develop" ] ; then
    APP_DEBUG=${APP_DEBUG:-"TRUE"}
else
    APP_DEBUG=${APP_DEBUG:-"FALSE"}
fi

APP_NAME=${APP_NAME:-"Monica"}
BROADCAST_DRIVER=${BROADCAST_DRIVER:-"log"}
CACHE_DRIVER=${CACHE_DRIVER:-"file"}
DB_PORT=${DB_PORT:-3306}
ENABLE_DAV=${ENABLE_DAV:-"TRUE"}
ENABLE_GEOLOCATION=${ENABLE_GEOLOCATION:-"TRUE"}
ENABLE_MFA=${ENABLE_MFA:-"TRUE"}
ENABLE_SENTRY=${ENABLE_SENTRY:-"FALSE"}
ENABLE_STATISTICS_PUBLIC_API=${ENABLE_STATISTICS_PUBLIC_API:-"FALSE"}
ENABLE_VERSION_CHECK=${ENABLE_VERSION_CHECK:-"FALSE"}
ENABLE_WEATHER=${ENABLE_WEATHER:-"FALSE"}
ENABLE_WORKER=${ENABLE_WORKER:-"TRUE"}
FILESYSTEM=${FILESYSTEM:-"local"}
FILESYSTEM_MAX_STORAGE_SIZE=${FILESYSTEM_MAX_STORAGE_SIZE:-"512"}
FILESYSTEM_MAX_UPLOAD_SIZE=${FILESYSTEM_MAX_UPLOAD_SIZE:-"10240"}
LOG_CHANNEL=${LOG_CHANNEL:-"stack"}
LOG_PATH=${LOG_PATH:-"/www/logs/monica/"}
LOG_LEVEL=${LOG_LEVEL="INFO"}
MAIL_FROM_ADDRESS=${MAIL_FROM_ADDRESS:-"noreply@example.com"}
MAIL_FROM_NAME=${MAIL_FROM_NAME:-"Monica"}
MAIL_TYPE=${MAIL_TYPE:-"SMTP"}
POLICY_COMPLIANT=${POLICY_COMPLIANT:-"TRUE"}
PROXIES_TRUSTED=${PROXIES_TRUSTED:-"\*"}
PROXIES_TRUST_CLOUDFLARE=${PROXIES_TRUST_CLOUDFLARE:-"FALSE"}
QUEUE_CONNECTION=${QUEUE_CONNECTION:-"sync"}
REDIS_DB=${REDIS_DB:-"0"}
REDIS_PASS=${REDIS_PASS:-"null"}
REDIS_PORT=${REDIS_PORT:-"6379"}
SESSION_DRIVER=${SESSION_DRIVER:-"database"}
SESSION_LIFETIME=${SESSION_LIFETIME:-"120"}
SETUP_TYPE=${SETUP_TYPE:-"AUTO"}
SIGNUP_DISABLE=${SIGNUP_DISABLE:-"FALSE"}
SIGNUP_DOUBLE_OPTIN=${SIGNUP_DOUBLE_OPTIN:-"FALSE"}
SMTP_ENCRYPTION=${SMTP_ENCRYPTION:-"null"}
SMTP_HOST=${SMTP_HOST:-"postfix-relay"}
SMTP_PASS=${SMTP_PASS:-"null"}
SMTP_PORT=${SMTP_PORT:-"25"}
SMTP_USER=${SMTP_USER:-"null"}
WORKER_BEGIN=${WORKER_BEGIN:-"+0"}
WORKER_INTERVAL=${WORKER_INTERVAL:-"60"}

case $FILESYSTEM in
        "S3" | "s3" | "minio" | "MINIO" )
            FILESYSTEM="s3"
            ;;
        "LOCAL" | "local" | "PUBLIC" | "public" )
            FILESYSTEM="public"
            ;;
esac
